

<div class="post-card">
    @if (Post != null)
    {
        <HxCard CssClass="rounded-0">
            <BodyTemplate>
                <p>@Post.Title</p>
                <HxBadge Color="ThemeColor.Info" Type="BadgeType.RoundedPill">
                    @Post.Category?.Name
                </HxBadge>
            </BodyTemplate>
        </HxCard>
    }
</div>


@code {
    [Parameter]
    public PostDto Post { get; set; } = default!;
}
